<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewThingActivity" 
    android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:id="@+id/edit_layout">

	<EditText 
	    android:id="@+id/edit_thing_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:maxLines="1"
	    android:textColor="#FFFFE0"
	    android:textSize="25sp"
	    android:layout_marginTop="10dp"
	    android:hint="Title"
	    />
	
	<EditText
	    android:layout_below="@id/edit_thing_title"
	    android:id="@+id/edit_thing_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="25sp"
	    android:lines="6"
	    android:gravity="top"
	    />
	<LinearLayout 
	    android:layout_below="@id/edit_thing_content"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    >
	    <ImageView 
	        android:id="@+id/image_thing_image"
	        android:layout_height="150dp"
	        android:layout_width="150dp"
	        
	        />
	</LinearLayout>
	
</RelativeLayout>